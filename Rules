#!/usr/bin/env ruby

# HTML
# compile '/**/*.html' do
#  layout '/default.*'
# end

compile '/**/*.html' do
end

compile '/**/*.erb' do
  filter :erb
end

# Markdown
compile '/**/*.md' do
  filter :kramdown
  layout '/default.*'
end

route '/index.erb' do
  '/index.html'
end

route '/**/*.{html,md}' do
  "#{item.identifier.without_ext}/index.html"
end

compile '/**/*' do
  write item.identifier.to_s
end

layout '/**/*', :erb
