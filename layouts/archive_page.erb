<div class="columns" >
  <div class="column">
  <% posts_in_year(item[:academic_year]).each do |post| %>
    <a href="<%= relative_path_to(post) %>" >
      <div class="box padbox">
        <article class="media">
          <div class="media-content">
            <div class="content">
              <h2><%= post[:title] %> <small> <%= post[:created_at] %></small></h2>
              <%= post[:description] %>
            </div>
          </div>
        </article>
      </div>
    </a>
  <% end %>
  </div>
  <div class="column is-narrow">
    <ul class = "archive_list">
      <% academic_years_items.each do |year, item| %>
        <li class="bolder">
          <%= link_to_unless_current pretty_year(year), item %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
